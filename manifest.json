{
    "name": "KU Groups Search",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Crawls kunet.dk and provides group search functionality.",
    "icons": { "48": "images/icon48.png" },
    "permissions": ["https://groups.ku.dk/*"],
    "content_scripts": [
        {
            "matches": ["https://groups.ku.dk/*"],
            "css": ["css/bootstrap.min.css", "css/search.css"],
            "js": [
                "js/jquery-1.9.1.min.js",
                "js/taffy-min.js",
                "js/crawler.js",
                "js/ui.js",
                "js/main.js"
                ]
        }
    ]
}
